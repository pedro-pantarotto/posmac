    soma = sum(A[i][j] * x[j] for j in range(n) if j != i)\n","            x[i] = (b[i] - soma) / A[i][i]\n","        erro_rel = np.linalg.norm(x - x_old, ord=np.inf) / np.linalg.norm(x, ord=np.inf)\n","        print(f\"{k+1:9} | {x} | {erro_rel:15.2e}\")\n","        if erro_rel < tol:\n","            print(f\"\\nGauss-Seidel convergiu em {k+1} iterações.\\n\")\n","            return x\n","    print(\"\\nNúmero máximo de iterações atingido.\\n\")\n","    return x\n","\n","# Método de Jacobi-Richardson\n","def jacobi(A, b, x0=None, tol=1e-6, max_iter=100):\n","    n = len(b)\n","    x = np.zeros(n) if x0 is None else x0.copy()\n","    x_new = x.copy()\n","\n","    for k in range(max_iter):\n","        for i in range(n):\n","            s = sum(A[i][j] * x[j] for j in range(n) if j != i)\n","            x_new[i] = (b[i] - s) / A[i][i]\n","        erro_rel = np.linalg.norm(x_new - x, ord=np.inf) / np.linalg.norm(x_new, ord=np.inf)\n","        if erro_rel < tol:\n","            print(f\"Jacobi convergiu em {k+1} iterações.\\n\")\n","            return x_new\n","        x = x_new.copy()\n","    print(\"Jacobi não convergiu.\\n\")\n","    return x\n","\n","# Método dos Gradientes (Steepest Descent)\n","def gradiente(A, b, x0, tol=1e-6, max_iter=100):\n","    x = x0.copy()\n","    r = b - A @ x\n","    for k in range(max_iter):\n","        alpha = (r @ r) / (r @ A @ r)\n","        x = x + alpha * r\n","        r = b - A @ x\n","        if np.linalg.norm(r) < tol:\n","            print(f\"Gradiente convergiu em {k+1} iterações.\\n\")\n","            return x\n","    print(\"Gradiente não convergiu.\\n\")\n","    return x\n","\n","# Método dos Gradientes Conjugados\n","def gradientes_conjugados(A, b, x0, tol=1e-6, max_iter=100):\n","    x = x0.copy()\n","    r = b - A @ x\n","    p = r.copy()\n","    for k in range(max_iter):\n","        Ap = A @ p\n","        alpha = (r @ r) / (p @ Ap)\n","        x = x + alpha * p\n","        r_new = r - alpha * Ap\n","        if np.linalg.norm(r_new) < tol:\n","            print(f\"Gradientes Conjugados convergiu em {k+1} iterações.\\n\")\n","            return x\n","        beta = (r_new @ r_new) / (r @ r)\n","        p = r_new + beta * p\n","        r = r_new.copy()\n","    print(\"Gradientes Conjugados não convergiu.\\n\")\n","    return x\n","\n","# Exemplo de sistema linear\n","\n","# Matriz A: simétrica e bem condicionada\n","A_gauss = np.array([\n","    [4.0, 1.0],\n","    [1.0, 3.0]\n","])\n","\n","# Vetor b\n","b_gauss = np.array([1.0, 2.0])\n","\n","# Executar métodos\n","sol_jacobi = jacobi(A, b, x0)\n","sol_gauss = gauss_seidel(A, b, x0)\n","sol_grad = gradiente(A, b, x0)\n","sol_cg = gradientes_conjugados(A, b, x0)\n","\n","# Mostrar soluções\n","print(\"Soluções aproximadas:\")\n","print(\"Jacobi-Richardson      :\", sol_jacobi)\n","print(\"Gauss-Seidel           :\", sol_gauss)\n","print(\"Gradiente              :\", sol_grad)\n","print(\"Gradientes Conjugados  :\", sol_cg)\n"]}]}