n","    print(f\"{'Iteração':>9} | {'x':>20} | {'Erro relativo':>15}\")\n","    print(\"-\" * 55)\n","\n","    for k in range(max_iter):\n","        x_old = x.copy()\n","\n","        for i in range(n):\n","            soma = sum(A[i][j] * x[j] for j in range(n) if j != i)\n","            x[i] = (b[i] - soma) / A[i][i]\n","\n","        # Cálculo do erro relativo\n","        erro_rel = np.linalg.norm(x - x_old, ord=np.inf) / np.linalg.norm(x, ord=np.inf)\n","\n","        print(f\"{k+1:9} | {x} | {erro_rel:15.2e}\")\n","\n","        if erro_rel < tol:\n","            print(\"\\nConvergência atingida.\")\n","            return x\n","\n","    print(\"\\nNúmero máximo de iterações atingido.\")\n","    return x\n","\n","A = np.array([[4, 1],\n","              [2, 3]], dtype=float)\n","\n","b = np.array([7, 8], dtype=float)\n","\n","x_aprox = gauss_seidel(A, b)\n","print(\"\\nSolução aproximada:\", x_aprox)\n","\n","def gradientes_conjugados(A, b, x0, tol=1e-6, max_iter=100):\n","    x = x0.copy()\n","    r = b - A @ x\n","    p = r.copy()\n","\n","    for k in range(max_iter):\n","        Ap = A @ p\n","        alpha = (r @ r) / (p @ Ap)\n","        x = x + alpha * p\n","        r_new = r - alpha * Ap\n","\n","        if np.linalg.norm(r_new) < tol:\n","            print(f\"Convergiu em {k+1} iterações.\")\n","            return x\n","\n","        beta = (r_new @ r_new) / (r @ r)\n","        p = r_new + beta * p\n","        r = r_new.copy()\n","\n","    print(\"Não convergiu.\")\n","    return x\n","\n","# Sistema Ax = b\n","A = np.array([[4.0, 1.0],\n","              [1.0, 3.0]])\n","b = np.array([1.0, 2.0])\n","x0 = np.zeros(len(b))\n","\n","# Use qualquer método:\n","sol_cg = gradientes_conjugados(A, b, x0)\n","\n","print(\"Gradientes Conjugados:\", sol_cg)\n","\n"]}]}